<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- default -->
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/button_back_ground_1"/>
            <stroke
                android:width="1dp"
                android:color="@color/white"/>
            <corners
                android:radius="8dip"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

    <!-- button_background focused -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid
                android:color="#00ffff"/>
            <stroke
                android:width="1dp"
                android:color="#00ffff"/>
            <corners
                android:radius="8dip"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

    <!-- button_background pressed -->
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/grey_line"/>
            <stroke
                android:width="1dp"
                android:color="#FF6900"/>
            <corners
                android:radius="12dip"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>